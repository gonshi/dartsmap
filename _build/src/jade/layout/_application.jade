include /mixin/_conditionalComment
doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    block title
      title #{meta.title}
    block path
    block meta
      include /include/meta/_basicinfo
    block style
      - var now = new Date();
      - var month = ( "00" + ( now.getMonth() + 1 ) ).slice( -2 );
      - var date = ( "00" + now.getDate() ).slice( -2 );
      - var hour = ( "00" + now.getHours() ).slice( -2 );
      - var minute = ( "00" + now.getMinutes() ).slice( -2 );
      - var dateParam = "" + month + date + hour + minute; 
      link(rel="stylesheet", href="css/main.css?v=" + dateParam, media="screen, print")
      link(href="//fonts.googleapis.com/css?family=Cherry+Cream Soda:400" rel="stylesheet" type="text/css")
      link(rel="shortcut icon", type="image/vnd.microsoft.icon", href="favicon.ico?v=" + dateParam)
      link(rel="icon", type="image/vnd.microsoft.icon", href="favicon.ico?v=" + dateParam)
    // script(type="text/javascript" src="//media.line.me/js/line-button.js?v=20140411")
    +ltIE9
      script(src="js/lib/html5shiv.js")
    script(src="http://cdn.mlkcca.com/v0.2.7/milkcocoa.js")
    script(src="https://maps.googleapis.com/maps/api/js?v=3.exp")
  body
    block body
    block scripts
      include /include/script/_facebook
      include /include/script/_twitter
      if debug
        script.
          window._DEBUG = {
            state: true
          }; 
      if prod
        script(src="js/app.min.js?v=" + dateParam)
      else
        script(src="js/app.js")
